<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.apoorvaa.calculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="2+3"
        android:textSize="40sp"
        android:textAlignment="textEnd"
        android:layout_weight="3"
        android:padding="10dp"
        android:id="@+id/answer"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:padding="0dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/clear"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/divide"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="*"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/multiply"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="x"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/bkspc"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:padding="0dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/seven"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/eight"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/nine"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/minus"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:padding="0dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/four"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/five"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/six"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/plus"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:padding="0dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/one"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/two"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/three"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/decimal"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="0dp"
        android:padding="0dp"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/zero"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="("
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/ob"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text=")"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/cb"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/equals"/>

    </LinearLayout>

</LinearLayout>
